            align-items:center;
        }

        .header_title{
            align-items:center;
            font-size:2.5rem;
            color:var(--while-color);
        }
        .header_title a{
            color:var(--while-color);
            text-decoration:none;
        }

        .header__taikhoan{
            margin-left:76.8%;
